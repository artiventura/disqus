<div id="disqus_thread"></div>
<script>
window.addEventListener('message', receiveMessage, false);
function receiveMessage(event)
{
    if (event.data) {
        var msg;
        try {
            msg = JSON.parse(event.data);
        } catch (err) {
            // Do nothing
        }
        if (!msg)
            return false;

        if (msg.name === 'resize') {
            window.parent.postMessage({
              sentinel: 'amp',
              type: 'embed-size',
              height: msg.data.height
            }, '*');
        }
    }
}
</script>
<script>
    /**
     * Todos los derechos reservados
     * VARIABLES DE CONFIGURACIÓN RECOMENDADAS: EDITE Y COMUNICE LA SECCIÓN ABAJO PARA INSERTAR VALORES DINÁMICOS DE SU PLATAFORMA O CMS.
     * APRENDA POR QUÉ ES IMPORTANTE LA DEFINICIÓN DE ESTAS VARIABLES: https://disqus.com/admin/universalcode/#configuration-variables
     */
    var disqus_config = function () {
        this.page.url = window.location;  // Reemplazar PAGE_URL con la variable de URL canónica de la página
        this.page.identifier = window.location.hash; // // Reemplazar PAGE_IDENTIFIER con la variable de identificador único de su página
    };
    (function() {  // NO EDITE POR DEBAJO DE ESTA LÍNEA
        var d = document, s = d.createElement('script');

        s.src = '//EXAMPLE.disqus.com/embed.js';

        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
    })();
</script>
